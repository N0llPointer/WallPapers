<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".FullscreenActivity">


    <ImageView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/black_overlay"
        android:layout_gravity="top"
        android:id="@+id/toolbar_fullscreen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_overlay"
        android:layout_gravity="bottom"
        android:id="@+id/bottom_toolbar"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:contentDescription="@string/set_favourite"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_favorite_picked"
            style="?android:borderlessButtonStyle"
            android:id="@+id/set_favourite_full_screen"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="0dp"
            android:contentDescription="@string/set_wall_paper"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_set_wallpaper"
            style="?android:borderlessButtonStyle"
            android:id="@+id/set_wallpaper_full_screen"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

    </LinearLayout>


</FrameLayout>